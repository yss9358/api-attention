<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="order">
	<!-- 쿼리문작성 -->
	<!-- <![CDATA[]]> -->
	
	
	
	<!-- bill 테이블에 추가 -->
	<insert id="insertOrder" parameterType="com.javaex.vo.BillVo">
		<![CDATA[
			insert into bill
			value(null, now(), #{total}, #{userNo}, #{point})
		]]>
		<selectKey keyProperty="orderNo" resultType="int" order="AFTER">
			<![CDATA[
				select last_insert_id()
			]]>
		</selectKey>
	</insert>
	
	
	<!-- sales 테이블에 추가 -->
	<insert id="insertSales" parameterType="com.javaex.vo.SalesVo">
		<![CDATA[
			insert into sales
			value (null, #{no}, #{orderNo}, #{count})
		]]>
	</insert>
	
	
	
</mapper>